@model IEnumerable<Recipe>

<div class="row row-cols-auto gx-4 gy-5">
    @for(var i = 0; i < 1; i++)
    {
        @foreach (var recipe in Model)
        {
            <div class="col mx-auto">
                <div class="shadow card mt-4" style="width: 18rem; height: 26rem;">
                    <img class="card-img-top" style="" src="@Html.Raw(recipe.ImageUrl)" alt="Card image cap">
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title">@recipe.Title</h5>
                        <p class="card-text line-clamp">@recipe.Description</p>
                        <a asp-controller="Recipe" asp-action="Get" asp-route-id="@recipe.Id" class="mt-auto btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        }
    }

    <div class="col mx-auto">
        <div class="shadow card mt-4" style="width: 18rem; height: 26rem;">
            <div class="card-body text-center">
                <a asp-controller="Recipe" asp-action="Create" class="col btn btn-primary d-flex align-items-center justify-content-center" style="width: 100%; height: 100%;">
                    <div class="col">
                        Create
                        <div class="row">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                                <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z" />
                            </svg>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>