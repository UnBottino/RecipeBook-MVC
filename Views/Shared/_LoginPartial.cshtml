@using Microsoft.AspNetCore.Identity
@using RecipeBook.Areas.Identity.Data

@inject SignInManager<RecipeBookUser> SignInManager
@inject UserManager<RecipeBookUser> UserManager

<ul class="navbar-nav ms-lg-auto ms-md-auto">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Recipe", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
